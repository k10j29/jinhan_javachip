package mymain;

import java.util.Scanner;

import myutil.Snail;
import myutil.Snail2;

public class MyMain_달팽이 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		int chasu;
		String yn="y";
		
		//달팽이 객체생성
		Snail2  snail = new Snail2();
		
		while(true) {
			System.out.print("차수:");
			chasu = scan.nextInt();
			
			//달팽이 차수전달->출력
			snail.setChasu(chasu);
			
			snail.display();
			
			System.out.print("또?(y/n):");
			yn = scan.next();
			
			if(!yn.equalsIgnoreCase("Y"))break;
			
		}//end-while
		
		System.out.println("--End--");
		
		
	}

}

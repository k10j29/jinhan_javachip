package myutil;

public class Snail {

	int [][] snail_array;
	int chasu;
	
	public void setChasu(int chasu) {
		this.chasu = chasu;
	     
		//달팽이 채우기
		make_snail();
	}

	private void make_snail() {
		// TODO Auto-generated method stub
		snail_array = new int[chasu][chasu];
		//달팽이 채우기
		
		
	}
	
	public void display() {
		
		for(int i=0;i<chasu;i++) {
			for(int k=0;k<chasu;k++) {
				System.out.printf("%4d", snail_array[i][k]);
			}
			System.out.println();
		}
		
	}
	
	
	
	
	
	
}

package myutil;

public class Snail {
	
	
	// 방향 결정 상수
	final static int RIGHT = 1;
	final static int DOWN = 2;
	final static int LEFT = 3;
	final static int UP = 1;
	
	int[][] snail_array;
	int chasu;

	public void setChasu(int chasu) {
		this.chasu = chasu;

		// 달팽이 채우기
		make_snail();

	}

	private void make_snail() {
		// TODO Auto-generated method stub
		snail_array = new int[chasu][chasu];
		// 달팽이 채우기

		int row ;
		int col ;
	
		int n = 1;
		int k = 0;
		int i = 1;
		//r = 1 d = 2 l = 3 u = 4
		
		int deg = 0;
		for(n=deg; n>0;n-=2){

            for(col=0;col<n;col++){

                snail_array[k][k+col]=i;

                i++;           

            }

            for(row=1;row<n;row++){

                snail_array[k+row][deg-k-1]=i;

                i++;

            }

            for(col=1;col<n;col++){

                snail_array[k+row-1][deg-k-col-1]=i;

                i++;

            }

            for(col=1;col<n-1;col++){

                snail_array[deg-k-col-1][k]=i;

                i++;

            }   

            k++;

        }



		
		
		
		
		
		
		

		// for (int i = 0; i < chasu * chasu; i++) {
		     
	
		            
	}

			
			
			// 첨자이동 알고리즘

			// 오른쪽 col ++
			// 왼쪽 row ++
			// 왼쪽 col--
			// 위쪽 row--

		

	}

	public void display() {

		for(row=0;row<deg;row++){

            for(col=0;col<deg;col++)

                System.out.printf("%3d",snail_array[row][col]);
			}
			System.out.println();
		}

	}

}
